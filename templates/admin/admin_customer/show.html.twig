{% extends 'admin/admin_customer/customer_base_admin.html.twig' %}

{% block title %}Fiche de {{ customer.firstname }} {{ customer.lastname }}{% endblock %}

{% block customer_header %}
    <h1>Fiche Client</h1>
    <span>Les informations sont le nerf de la guerres</span>
{% endblock %}

{% block customer_content %}
    <div class="row d-flex flex-row justify-content-between">
        <div class="col-1">
            <a class="btn btn-warning" href="{{ path('admin_customer_index') }}"><i class="fas fa-backward"></i> Retour</a>
        </div>
        <div class="col-2 d-inline-flex justify-content-end show_buttons">
            <div class="">
                <a class="btn btn-primary" href="{{ path('admin_customer_edit', {'id': customer.id}) }}"><i class="fas fa-pen"></i> Modifier</a>
            </div>
            <div class="">
                {{ include('admin/admin_customer/_delete_form.html.twig') }}
            </div>



        </div>
    </div>
    <div class="row clearfix">
        <div class="col-md-12">
            <div class="card customer__social">
                <div class="customer__social_header d-flex">
                    <div class="d-flex">
                        <div class="mr-3">
                            <img src="{{ asset('build/images/styled_men_avatar_2.png') }}" alt="">
                        </div>
                        <div class="details">
                            <h5 class="mb-0">{{ customer.firstname }} {{ customer.lastname }}</h5>
                            <span class="text-light">{{ customer.customerEmail }}</span>
                            <p>{{ customer.phoneNumber }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-5 mt-3">
            <div class="card">
                <div class="body">
                    <small class="text-muted">Adresse :</small>
                    <p>{{ customer.customerAddress }} {{ customer.customerZipcode }} {{ customer.customerCity }}</p>
                    <hr>
                    <small class="text-muted">Email adresse :</small>
                    <p>{{ customer.customerEmail }}</p>
                    <hr>
                    <small class="text-muted">Téléphone :</small>
                    <p>{{ customer.phoneNumber }}</p>
                    <hr>
                    <small class="text-muted">Ajouté le</small>
                    <p>{{ customer.createdAt | date("d/m/Y") }}</p>
                </div>
            </div>
        </div>
        <div class="col-xl-8 col-lg-8 col-md-7 mt-3">
            <div class="card">
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Evenement</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>11/01/2022</td>
                                <td>Rendez-vous</td>
                                <td>En attente de retour</td>
                                <td>Plus de details</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
